<h1>Listing carers</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Apellidos</th>
    <th>Email</th>
    <th>Telefono</th>
    <th>Localizar</th>
    <th>Calle</th>
    <th>Provincia</th>
    <th>Cp</th>
    <th>Comentarios</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @carers.each do |carer| %>
  <tr>
    <td><%= carer.nombre %></td>
    <td><%= carer.apellidos %></td>
    <td><%= carer.email %></td>
    <td><%= carer.telefono %></td>
    <td><%= carer.localizar %></td>
    <td><%= carer.calle %></td>
    <td><%= carer.provincia %></td>
    <td><%= carer.cp %></td>
    <td><%= carer.comentarios %></td>
    <td><%= link_to 'Show', carer %></td>
    <td><%= link_to 'Edit', edit_carer_path(carer) %></td>
    <td><%= link_to 'Destroy', carer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

