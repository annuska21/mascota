<%= form_for(@shelter) do |f|  %>
<p> Los campos marcados con asterisco son obligatorios.</p>
    <%= render :partial=>"layouts/errors_panel" , object: @shelter %>

  <div class="row">
    <div class="col-lg-4 col-md-4">
      <div class="field">
        <%= f.label(:name, "Nombre*") %><br />
        <%= f.text_field :name, :class=>"form-control"%>
      </div>
    </div><!-- Final columna -->
    <div class="col-lg-4 col-md-4">
      <div class="field">
        <%= f.label(:email, "Usuario - email*") %><br />
        <%= f.text_field :email, :class=>"form-control" %>
      </div>
    </div><!-- Final columna -->
    <div class="col-lg-4 col-md-4">
      <div class="field">
        <%= f.label(:password, "Cambiar contraseña") %><br />
       <%= f.text_field :password, :class=>"form-control" %>
      </div>
    </div><!-- Final columna -->

  </div><!-- Final del row -->
  <div class="row">
    <div class="col-lg-4 col-md-4">
      <div class="field">
        <%= f.label(:phone, "Telefono") %><br />
        <%= f.number_field :phone, :class=>"form-control" %>
      </div>
    </div><!-- Final columna -->
    <div class="col-lg-4 col-md-4">
      <div class="field">
        <%= f.label(:web, "Página web") %><br />
        <%= f.text_field :web, :class=>"form-control" %>
      </div>
    </div><!-- Final columna -->
    <div class="col-lg-4 col-md-4">
     <div class="field">
        <%= f.label(:cif, "CIF*") %><br />
        <%= f.text_field :cif, :class=>"form-control" %>
      </div>

    </div><!-- Final columna -->
  </div><!-- Final del row -->
  <div class="row">
    <div class="col-lg-4 col-md-4">
     <div class="field">
        <%= f.label(:street, "Calle") %><br />
        <%= f.text_field :street, :class=>"form-control" %>
      </div>
    </div><!-- Final columna -->
    <div class="col-lg-4 col-md-4">
      <div class="field">
        <%= f.label(:postal_code, "Código postal") %><br />
        <%= f.text_field :postal_code, :class=>"form-control" %>
      </div>
    </div><!-- Final columna -->
    <div class="col-lg-4 col-md-4">
      <div class="field">
        <%= f.label(:province, "Provincia*") %><br />
        <%= f.select(:province,
               Province.options_for_select,
              { include_blank: '- Provincia -' },
              :class => "form-control"
            ) %>
      </div>
    </div><!-- Final columna -->

  </div><!-- Final del row -->

  <div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="field">
          <%= f.label(:adoption_requirement, "Requisitos de adopción") %><br />
          <%= f.text_area(:adoption_requirement, :rows => 5, :class=>"form-control")  %>
        </div>
    </div>
  </div>
  <div class="row">
      <div class="col-lg-12 col-md-12">
        <div class="field">
          <%= f.label(:shelter_description, "Descripción del refugio") %><br />
          <%= f.text_area( :shelter_description, :rows => 5, :class=>"form-control")  %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12">
        <div class="field">
          <%= f.label(:donation_information, "Información para donaciones") %><br />
          <%= f.text_area(:donation_information, :rows => 5, :class=>"form-control")  %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3 col-md-3">
        <div class="field">
          <br>
         <%= f.check_box :carer_possibility %> <%= f.label(:carer_possibility, " Posibilidad de acogida") %>          
        </div>
      </div>
      <div class="col-lg-9 col-md-9">
        <div class="field">
          <%= f.label(:carer_detail, "Detalles de acogida") %><br />
          <%= f.text_area(:carer_detail, :rows => 5, :class=>"form-control")  %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3 col-md-3">
        <div class="field">
           <br>
          <%= f.check_box :voluntary %> <%= f.label(:voluntary, " Se buscan voluntarios o padrinos") %>
         </div>
      </div>
      <div class="col-lg-9 col-md-9">
        <div class="field">
          <%= f.label(:voluntary_detail, "Detalles voluntariado o apadrinamiento") %><br />
          <%= f.text_area(:voluntary_detail, :rows => 5, :class=>"form-control")  %>
        </div>

      </div>
    </div>


    <div class="latitud">
    <% f.label(:latitude, "latitud") %><br />
    <% f.text_field :latitude %>
  </div>
      <div class="longitud">
    <% f.label(:longitude, "longitud") %><br />
    <% f.text_field :longitude %>
  </div>
  
  <div class="actions">
    <%= f.submit({:class=>"btn btn-info"}) %>
  </div>
<% end %>
