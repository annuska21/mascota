
  <%= render :partial=>"layouts/errors_panel" , object: @carer %>
  <div class="row">
    <div class="col-lg-9 col-md-9">
      <div class="row">
        <div class="col-lg-3 col-md-3">
         <div class="field">
            <%= f.label(:name, "Nombre") %><br />
            <%= f.text_field :name, :class=>"form-control" %>
          </div>
        </div>
        <div class="col-lg-3 col-md-3">
          <div class="field">
            <%= f.label(:last_name, "Apellidos") %><br />
            <%= f.text_field :last_name, :class=>"form-control" %>
          </div>
        </div>
        <div class="col-lg-3 col-md-3">
          <div class="field">
            <%= f.label(:phone, "Teléfono") %><br />
            <%= f.number_field :phone, :class=>"form-control" %>
          </div>
        </div>
        <div class="col-lg-3 col-md-3">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.text_field :email, :class=>"form-control" %>
          </div>
        </div>
      </div>   <!--final del row -->
      <div class="row">
        <div class="col-lg-3 col-md-3">
          <div class="field"><br>
            <%= f.label(:locate, "Localizar") %>: 
            <%= f.check_box :locate %>
          </div>
        </div>
        <div class="col-lg-3 col-md-3">
          <div class="field">
            <%= f.label(:street, "Calle") %><br />
            <%= f.text_field :street, :class=>"form-control" %>
          </div>
        </div>
        <div class="col-lg-3 col-md-3">
         <div class="field">
            <%= f.label(:province, "Provincia") %><br />
            <%= f.select(:province,
               Province.options_for_select,
              { include_blank: '- Provincia -' },
              :class => "form-control"
            ) %>
          </div>
        </div>
        <div class="col-lg-3 col-md-3">
          <div class="field">
            <%= f.label(:postal_code, "Código postal") %><br />
            <%= f.number_field :postal_code, :class=>"form-control" %>
          </div>
        </div>
        <div class="field">
          <%= f.label(:commentary, "Comentarios") %><br />
          <%= f.text_area(:commentary, :rows=>5, :class=>"form-control") %>
       </div>
      </div>  <!--final del row -->

    </div><!--final columna -->
    <div class="col-lg-3 col-md-3">

             
    </div><!--final columna -->
  </div><!--final del row -->


   

 







