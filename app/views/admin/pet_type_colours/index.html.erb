<h1>Listado colores</h1>
<%= link_to 'Nuevo color', new_pet_type_colour_path %>

<table class="table table-hover">
  <tr>
    <th>Nombre</th>
    <th>Descripción</th>
    <th>Tipo de mascota</th>

    <th></th>
    <th></th>
  </tr>

<% @pet_type_colours.each do |pet_type_colour| %>
  <tr>
    <td><%= pet_type_colour.name %></td>
    <td><%= pet_type_colour.description %></td>

    <td><%= link_to 'Editar', edit_pet_type_colour_path(pet_type_colour) %></td>
    <td><%= link_to 'Borrar', pet_type_colour, method: :delete, data: { confirm: 'Estás seguro?' } %></td>
  </tr>
<% end %>
</table>

