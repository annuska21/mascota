<h1>Listado de tipos de mascota</h1>
<%= link_to 'Nuevo tipo de mascota', new_pet_type_path %>
<table class="table table-hover">
  <tr>
    <th>Nombre</th>
    <th></th>
    <th></th>
  </tr>

<% @pet_types.each do |pet_type| %>
  <tr>
    <td><%= pet_type.name %></td>
    <td><%= link_to 'Editar', edit_pet_type_path(pet_type) %></td>
    <td><%= link_to 'Borrar', pet_type, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
  </tr>
<% end %>
</table>

