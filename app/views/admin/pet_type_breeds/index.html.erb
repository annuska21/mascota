<h1>Listado de razas</h1>
<%= link_to 'Nueva raza', new_pet_type_breed_path %>
<table class="table table-hover">
  <tr>
    <th>Nombre</th>
    <th>Tipo de mascota</th>
    <th></th>
    <th></th>

  </tr>

<% @pet_type_breeds.each do |pet_type_breed| %>
  <tr>
    <td><%= pet_type_breed.name %></td>
    <td><%= pet_type_breed.pet_type.name %></td>
    <td><%= link_to 'Editar', edit_pet_type_breed_path(pet_type_breed) %></td>
