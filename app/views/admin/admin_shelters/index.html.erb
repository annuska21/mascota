<h1>Listado Refugios</h1>
<%= link_to 'Nuevo refugio', new_admin_shelter_path %>
<table class="table table-hover">
  <tr>
    <th>Nombre</th>
    <th>Número de mascotas</th>
    <th>Buscan casas de acogida</th>
    <th>Buscan voluntarios</th>
    <th>Direccion</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shelters.each do |shelter| %>
  <tr>
    <td><%= shelter.name %></td>
    <td><%= shelter.pets.en_adopcion.size %></td>
    <td><%= status_tag(shelter.carer_possibility) %></td>
    <td><%= status_tag(shelter.voluntary) %></td>
    <td><%= shelter.address %></td>

    <td></td>
    <td><%= link_to 'Editar', edit_admin_shelter_path(shelter) %></td>
    <td><%= link_to 'Borrar', admin_shelter_path(shelter), method: :delete, data: { confirm: 'Estás seguro?' } %></td>
  </tr>
<% end %>
</table>

