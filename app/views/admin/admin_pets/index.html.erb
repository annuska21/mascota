<h1>Listado de mascotas</h1>
<%= link_to 'Nueva mascota', new_admin_pet_path %>
<table class="table table-hover">
  <tr>

    <th></th>
    <th>Tipo de mascota</th>
    <th>Nombre</th>
    <th>Edad</th>
    <th>Tamaño</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

    <% @pets.each do |pet| %>
  <tr>
    <td><%= image_tag(pet.picture_url, :size => '150x150', :alt => 'imagen') if pet.picture? %></td>
    <td><%= pet.pet_type.name %></td>
    <td><%= pet.name %></td>
    <td><%= pet.age %></td>
    <td><%= pet.pet_size.name %></td>

    <td><%= link_to 'Editar', edit_admin_pet_path(pet) %></td>
    <td><%= link_to 'Borrar', admin_pet_path(pet), method: :delete, data: { confirm: 'Estás seguro?' } %></td>
  </tr>
<% end %>
</table>

<br />


